{
  "name": "svelte-instantdb",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/svelte-instantdb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/svelte-instantdb.git"
  },
  "bugs": "https://github.com/wobsoriano/svelte-instantdb/issues",
  "packageManager": "pnpm@9.12.0",
  "version": "0.3.3",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run package",
    "build:playground": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "release": "pnpm build && changeset publish",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./stores": {
      "types": "./dist/stores/index.d.ts",
      "svelte": "./dist/stores/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.7.3",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "publint": "^0.2.12",
    "svelte": "^5.1.6",
    "svelte-check": "^4.0.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^5.4.10"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@instantdb/core": "^0.15.7"
  }
}
