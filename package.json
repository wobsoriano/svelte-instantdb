{
  "name": "svelte-instantdb",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/svelte-instantdb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/svelte-instantdb.git"
  },
  "bugs": "https://github.com/wobsoriano/svelte-instantdb/issues",
  "packageManager": "pnpm@10.6.3",
  "version": "0.4.25",
  "scripts": {
    "dev": "vite dev",
    "build": "npm run package",
    "build:playground": "vite build",
    "preview": "vite preview",
    "build:version": "vite build --config vite.version.ts",
    "package": "svelte-kit sync && svelte-package && publint && npm run build:version",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "release": "pnpm build && changeset publish",
    "format": "prettier --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.19.2",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/eslint": "^9.6.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.1.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.9",
    "svelte": "^5.23.0",
    "svelte-check": "^4.1.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.2"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@instantdb/core": "^0.20.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
