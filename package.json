{
	"name": "svelte-instantdb",
	"license": "MIT",
	"homepage": "https://github.com/wobsoriano/svelte-instantdb#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wobsoriano/svelte-instantdb.git"
	},
	"bugs": "https://github.com/wobsoriano/svelte-instantdb/issues",
	"packageManager": "pnpm@9.10.0",
	"version": "0.1.8",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"release": "pnpm build && changeset publish",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./runes": {
			"types": "./dist/runes/index.d.ts",
			"svelte": "./dist/runes/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.0.0-next.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.8",
		"@sveltejs/adapter-auto": "^3.2.4",
		"@sveltejs/kit": "^2.5.26",
		"@sveltejs/package": "^2.3.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.7",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.10",
		"svelte": "^5.0.0-next.245",
		"svelte-check": "^4.0.2",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.5.0",
		"vite": "^5.4.4"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@instantdb/core": "^0.14.22"
	}
}
